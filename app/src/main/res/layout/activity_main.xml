            android:id="@+id/tb_timer3"
            android:background="@drawable/t_3dark"
            android:textOn=""
            android:textOff=""
            android:layout_margin="4dp"
            />
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/tb_timer4"
            android:background="@drawable/t_5dark"
            android:textOn=""
            android:textOff=""
            android:layout_margin="4dp"
            />
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/tb_timer5"
            android:background="@drawable/t_10dark"
            android:textOn=""
            android:textOff=""
            android:layout_margin="4dp"
            />
    </LinearLayout>
    <ToggleButton
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/tb_power"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/off"
        android:layout_above="@id/ll_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>


