        android:id="@+id/ll_layout"
        android:gravity="center_horizontal">

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/tb_timer1"
            android:background="@drawable/t_30dark"
            android:textOn=""
            android:textOff=""
            android:layout_margin="4dp"/>
        <ToggleButton
